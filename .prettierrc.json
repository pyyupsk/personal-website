{
    "$schema": "https://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "plugins": ["prettier-plugin-pkg", "prettier-plugin-tailwindcss"],
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "tailwindFunctions": ["clsx", "cn", "cva"],
    "trailingComma": "all",
    "overrides": [
        {
            "files": ["**/*.md", "**/*.mdx"],
            "options": {
                "parser": "markdown",
                "proseWrap": "always",
                "printWidth": 80,
                "tabWidth": 2
            }
        }
    ]
}

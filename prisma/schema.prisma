generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Project {
  id          Int           @id @default(autoincrement())
  title       String        @db.VarChar(255)
  description String?
  status      ProjectStatus @default(NOT_STARTED)
  link        String

  @@index([status])
  @@map("projects")
}

model Posts {
  id          String     @id @default(uuid())
  title       String     @db.VarChar(255)
  description String?
  publishDate DateTime   @default(now())
  status      PostStatus @default(DRAFT)

  @@index([id])
  @@index([status])
  @@index([publishDate])
  @@map("posts")
}

model PostsContent {
  id      String @id @default(uuid())
  postId  String
  content String

  @@index([postId])
  @@map("posts_content")
}

enum ProjectStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  ON_HOLD
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
